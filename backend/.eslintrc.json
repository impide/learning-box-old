{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "import/no-extraneous-dependencies": "off",
        "max-classes-per-file": ["error", 10],
        "import/extensions": [
            "error",
            "never",
            {
                "js": [
                    "always"
                ],
                "json": [
                    "always"
                ]
            }
        ],
        "linebreak-style": ["error", "windows"],
        "import/prefer-default-export": "off"
    }
}
